// LOGIN STYLES
// -------------------------------------------------------------------------

// The login form.
#login
    margin 0
    padding 0
    text-align center

    // Top text with logo.
    .header
        background rgb(255, 255, 255) url(../images/logo.jpg) no-repeat top
        padding 30px 0 1px 0

        h1
            color darkTextColor
            margin-top 70px
            padding 0

    // The login form box.
    form
        display block
        margin 30px auto auto auto
        padding-right 5px
        width 260px

        div
            clear both
            padding-top 5px

        label
            display inline-block
            float left
            margin-top 5px

        input
            float right

        #forgot
            cursor pointer
            float left
            margin-top 20px

    // Login button.
    button.identify
        margin-top 15px
        float right

    // Bottom div with more info
    div.about
        clear both
        padding-top 50px
        a
            margin-left 5px

    // Error message in red.
    .error
        color errorLightColor
        font-weight bold
        height 20px
        padding 10px