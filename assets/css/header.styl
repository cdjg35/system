// HEADER STYLES
// ---------------------------------------------------------------

#header
    background rgba(70, 70, 70, 1)
    left 0
    position fixed
    top 0
    user-select none
    -webkit-user-select none
    width 100%
    z-index 8

    .right
        margin 4px 3px 0 0

// Icons on the top right.
#header > img
    position relative
    z-index 10


// MENU
// ---------------------------------------------------------------

#menu
    font-size 1.1em
    height 34px
    margin 5px 5px 3px 5px
    position relative
    word-spacing 0

    .lock
        display inline-block
        margin-left 18px
        .toggle
            padding-bottom 1px !important

    .autoupdate
        display inline-block
        margin-left 12px
        .toggle
            padding-bottom 1px !important

    .menu-item
        background rgba(0, 0, 0, 0.8)
        border 1px solid rgba(0, 0, 0, 1)
        color rgba(250, 250, 250, 1)
        cursor pointer
        display inline-block
        margin-right 10px
        padding 7px 13px 7px 13px
        position relative
        text-decoration none
        z-index 9

    .menu-item:hover
        color rgba(60, 150, 70, 1)

    .menu-item.active
        background-color overlayBackground
        border-color overlayBackground
        color highlightColor
        padding-bottom 12px

    .styled input[type="checkbox"] + span
    .styled input[type="radio"] + span
        font 11px/26px Arial, Helvetica, sans-serif

    .styled.lock input[type="checkbox"] + span:after
    .styled.lock input[type="radio"] + span:after
        content "edit"

    .styled.lock input[type="checkbox"]:checked + span:after
    .styled.lock input[type="radio"]:checked + span:after
        content "lock"

    .styled.lock input[type="checkbox"] + span
    .styled.lock input[type="radio"] + span
        color #779977
        text-shadow -1px -1px #CCEECC

    .styled.lock input[type="checkbox"]:checked + span
    .styled.lock input[type="radio"]:checked + span
        background -webkit-linear-gradient(top, #AA3311, #771100)
        background linear-gradient(top, #AA3311, #771100)
        color #FAFAFA
        text-shadow -1px -1px #550000

#top-img-lock
    float right
    margin-top 5px

#top-img-autoupdate
    float right
    margin-top 4px

#top-img-fullscreen
    cursor pointer
    float right
    margin-right 1px
    margin-top 5px

#top-img-refresh
    cursor pointer
    float right
    margin-right 5px
    margin-top 5px

#submenu-items
    display none
    position fixed
    top 37px
    z-index 9

    .menu-item
        background rgba(77, 77, 77, 0.9)
        border 0
        display block
        padding-right 30px

        &:hover
            background rgba(70, 170, 80, 0.9)
            border 0
            color rgba(0, 0, 0, 1)
            display block

        &.active
            background rgba(60, 150, 70, 0.9)


// The top span that shows then an Audit Data is outdated
#top-audit-data-outdated
    font-size 80%
    margin-left 5px
    text-shadow #EE2211 0 0 8px
