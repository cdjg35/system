// HEADER STYLES
// -------------------------------------------------------------------------

#header
    background mediumBgColor
    left 0
    min-width 1024px
    position fixed
    top 0
    -webkit-user-select none
    user-select none
    width 100%
    z-index 8


// MENU
// -------------------------------------------------------------------------

#menu
    font-size 1.1em
    height 34px
    margin 0 5px 0 5px
    position relative
    word-spacing 0

    .autoupdate
        display inline-block
        float right
        margin 2px 58px 0 0
        .toggle
            padding-bottom 1px !important

    .lock
        display inline-block
        float right
        margin 2px 14px 0 0
        .toggle
            padding-bottom 1px !important

    .disabled
        opacity 0.7

    .menu-item
        color brightTextColor
        display inline-block
        margin-right 10px
        padding 7px 12px 8px 12px
        position relative
        text-decoration none
        z-index 9

    a.menu-item:hover, .menu-item.hover
        background darkBgColor
        color darkHoverColor
        cursor pointer

    .menu-item.active
        background-color overlayBackground
        color lightHoverColor

    .lock input[type="checkbox"] + span:after
        content "edit"

    .lock input[type="checkbox"]:checked + span:after
        content "lock"

    .lock input[type="checkbox"]:checked + span
        background errorColor
        color lightTextColor

    .lock input[type="checkbox"]:disabled + span
        color rgb(210, 210, 210)

#top-img-lock
    float right
    margin-top 5px

#top-img-autoupdate
    float right
    margin-top 4px

#top-img-fullscreen
    cursor pointer
    float right
    position fixed
    right 11px
    top 5px
    z-index 10

#submenu-items
    display none
    margin-top 1px
    position fixed
    top headerHeight
    z-index 9

    // Each submenu item is a map link.
    .menu-item
        background darkBgColor
        border 0
        display block
        padding-right 26px

        &:hover
            background darkHoverColor
            border 0
            color darkTextColor
            display block

        &.active
            background lightHoverColor
            color darkTextColor

// The top span that shows then an Audit Data is outdated
#top-audit-data-outdated
    font-size 80%
    margin-left 5px
