doctype html
html
    head
        title #{title}
        link(type="image/x-icon", href="images/favico.png", rel="icon")
        meta(name="apple-mobile-web-app-capable", content="yes")
        != js("basejs")
        != js("view/loginView")
        != css("appcss")
    body#login
        div.header
            h1 #{title} Login
        form(method="POST")
            div
                label(for="username") Username
                input#username(type="text", name="username", placeholder="username", title="Enter your username (case sensitive!)")
            div
                label(for="password") Password
                input#password(type="password", name="password", placeholder="password", title="Enter your password (case sensitive!)")
            div
                a#forgot Forgot credentials?
                button.identify Validate
            div.error #{errorMsg}

        div.about
            span This free and open-source software is based on the System App by Zalando.
            a(href="http://systemapp.io",target="systemapp.io") More...